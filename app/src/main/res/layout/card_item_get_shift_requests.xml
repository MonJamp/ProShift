<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:elevation="10dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="5dp"
    card_view:cardCornerRadius="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            android:id="@+id/card_get_shift_requests_employee_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:layout_weight="1"
            tools:text="Employee Name"
            android:textColor="#616161"
            android:textSize="18sp"
            android:textStyle="bold"/>
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/card_get_shift_requests_company_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Company"
                android:textSize="18sp"
                android:textStyle="bold"/>
            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/card_get_shift_requests_id_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Shift ID:"
                    android:textSize="18sp"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/card_get_shift_requests_shift_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="1234"
                    android:textSize="18sp"
                    android:textStyle="bold"/>
            </LinearLayout>

        </LinearLayout>
        <ImageView
            android:id="@+id/card_get_shift_requests_deny_button"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:paddingLeft="40dp"
            android:src="@drawable/ic_deny_button"/>
        <ImageView
            android:id="@+id/card_get_shift_requests_approve_button"
            android:layout_width="50dp"
            android:paddingLeft="10dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_approve_button"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>