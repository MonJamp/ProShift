<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:elevation="10dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="5dp"
    card_view:cardCornerRadius="5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="391dp"
        android:layout_height="match_parent"
        card_view:layout_constraintBottom_toTopOf="@+id/textView2"
        card_view:layout_constraintTop_toTopOf="@+id/textView2">

        <TextView
            android:id="@+id/card_get_time_off_requests_company_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:textSize="20sp"
            android:textStyle="bold"
            card_view:layout_constraintStart_toEndOf="@+id/card_get_time_off_requests_start_date"
            card_view:layout_constraintTop_toTopOf="parent"
            tools:text="Company ID" />

        <TextView
            android:id="@+id/card_get_time_off_requests_employee_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:textSize="22sp"
            android:textStyle="bold"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            tools:text="Employee Name" />

        <ImageView
            android:id="@+id/card_get_time_off_requests_deny_button"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="14dp"
            android:src="@drawable/ic_deny_button"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toEndOf="@+id/card_get_time_off_requests_approve_button"
            card_view:layout_constraintStart_toStartOf="@+id/card_get_time_off_requests_approve_button"
            card_view:layout_constraintTop_toBottomOf="@+id/card_get_time_off_requests_approve_button" />

        <ImageView
            android:id="@+id/card_get_time_off_requests_approve_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="21dp"
            android:src="@drawable/ic_approve_button"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/card_get_time_off_requests_company_id" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Start Date:"
            android:textSize="20sp"
            android:textStyle="bold"
            card_view:layout_constraintEnd_toEndOf="@+id/textView2"
            card_view:layout_constraintTop_toBottomOf="@+id/card_get_time_off_requests_employee_name"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="End Date:"
            android:textSize="20sp"
            android:textStyle="bold"
            card_view:layout_constraintEnd_toEndOf="@+id/textView3"
            card_view:layout_constraintTop_toBottomOf="@+id/textView1"/>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start Time:"
            android:textSize="20sp"
            android:textStyle="bold"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/textView2" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="End Time:"
            android:textSize="20sp"
            android:textStyle="bold"
            card_view:layout_constraintEnd_toEndOf="@+id/textView3"
            card_view:layout_constraintTop_toBottomOf="@+id/textView3"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/card_get_time_off_requests_start_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            android:textStyle="bold"
            card_view:layout_constraintStart_toStartOf="@+id/card_get_time_off_requests_end_date"
            card_view:layout_constraintTop_toBottomOf="@+id/card_get_time_off_requests_employee_name"
            tools:ignore="MissingConstraints"
            tools:text="2019-01-01" />

        <TextView
            android:id="@+id/card_get_time_off_requests_end_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            card_view:layout_constraintStart_toStartOf="@+id/card_get_time_off_requests_start_time"
            card_view:layout_constraintTop_toBottomOf="@+id/card_get_time_off_requests_start_date"
            tools:ignore="MissingConstraints"
            tools:text="2020-01-01" />

        <TextView
            android:id="@+id/card_get_time_off_requests_start_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            card_view:layout_constraintStart_toStartOf="@+id/card_get_time_off_requests_end_time"
            card_view:layout_constraintTop_toBottomOf="@+id/card_get_time_off_requests_end_date"
            tools:ignore="MissingConstraints"
            tools:text="12:00:00" />

        <TextView
            android:id="@+id/card_get_time_off_requests_end_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="23dp"
            android:textSize="20sp"
            android:textStyle="bold"
            card_view:layout_constraintStart_toEndOf="@+id/textView3"
            card_view:layout_constraintTop_toBottomOf="@+id/card_get_time_off_requests_start_time"
            tools:ignore="MissingConstraints"
            tools:text="05:00:00" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>