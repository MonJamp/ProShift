<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardTimeOffItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:background="@color/colorAccent"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <!-- Main context of card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">
            <TextView
                android:id="@+id/view_all_shifts_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="September 21 (Monday) â€¢ 8 Hours"
                android:textColor="@android:color/secondary_text_light"
                android:textSize="16dp" />
            <TextView
                android:id="@+id/view_all_shifts_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                tools:text="9:00 AM - 5:00 PM"
                android:textColor="@android:color/primary_text_light"
                android:textSize="20dp" />
            <TextView
                android:id="@+id/view_all_shifts_employee_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                tools:text="Bill Gates"
                android:textColor="@android:color/secondary_text_light"
                android:textSize="16dp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginHorizontal="50dp"
            android:background="@android:color/holo_purple">
        </View>

        <!-- Buttons -->
        <LinearLayout android:id="@+id/cardOpenShiftControls2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"> <!-- Set this to visible to expand card and show action buttons-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_gravity="center"
                android:orientation="horizontal">
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/view_all_shifts_edit_button"
                    style="?attr/borderlessButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="4dp"
                    android:text="Modify Shift" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginHorizontal="50dp"
                android:background="@android:color/holo_purple">
            </View>
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>